.row
  .col-md-5.margin-center
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .panel.panel-default
        .panel-heading
          %h4 Log in
        .panel-body
          .form-group
            = f.email_field :email, autofocus: true, class: 'form-control input-lg', placeholder: 'E-mail'
          .form-group
            = f.password_field :password, autocomplete: "off", class: 'form-control input-lg', placeholder: 'Password'
          - if devise_mapping.rememberable?
            .form-group
              = f.check_box :remember_me
              = f.label :remember_me
        .panel-footer
          = f.submit "Sign in now", class: 'btn btn-lg btn-default'
