%li.dashboards= link_to 'Dashboard', dashboard_path, class: 'btn-xos'
%li.repositories= link_to 'Repositories', repositories_path, class: 'btn-xos'
%li.developers= link_to 'Developers', developers_path, class: 'btn-xos' if policy(:developer).index?
%li.spaces= link_to 'Work spaces', spaces_path, class: 'btn-xos' if policy(:space).index?
%li.apps= link_to 'Apps', apps_path, class: 'btn-xos' if policy(:app).index?
%li.dropdown
  = link_to '#', data: {toggle: 'dropdown'}, role: 'button', class: 'btn-avatar dropdown-toggle' do
    = image_tag current_user.avatar.thumb, width: '32px', height: '32px', class: 'img-circle'
    = current_user.login
  %ul.dropdown-menu
    %li= link_to 'Keys', keys_path
    %li= link_to 'Settings', edit_settings_path
    %li.divider
    %li= link_to 'Logout', destroy_user_session_path, method: :delete
